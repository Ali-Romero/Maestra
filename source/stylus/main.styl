@import 'common/variables'
@import 'common/*'
@import 'components/*'

@font-face
  font-family: "Futura"
  src: url('/fonts/futurabookc.woff'), url('/fonts/futurabookc.woff2')
  font-display: swap

@font-face
  font-family: "Proxima"
  src: url('/fonts/Proxima Nova.woff'), url('/fonts/Proxima Nova.woff2')
  font-display: swap

.page
  display: flex
  flex-direction: column
  min-height: 100%

  &__content
    flex: 1

.slick-slider
  .slick-arrow.slick-prev
    background-image: url('/images/prev.svg')
  
  .slick-arrow.slick-next
    background-image: url('/images/next.svg')

  .slick-arrow.slick-prev,
  .slick-arrow.slick-next
    width: 40px
    height: 40px
    position: absolute
    z-index 2
    font-size: 0
    background-color: alpha($color-dark-brown, 0.6)
    border-radius: 100%
    background-repeat:no-repeat
    background-position: center
    background-size: 32px

    +above($breakpoints.sm)
      width: 50px
      height: 50px

    +above($breakpoints.md)
      width: 40px
      height: 40px
