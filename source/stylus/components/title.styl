.title-content
  font-size: 30px
  line-height: 34px
  text-align: center
  max-width: 278px
  margin-bottom: 20px
  margin-left: auto
  margin-right: auto
  display: flex
  justify-content: center

  &--brown
    color: $color-brown

  &--light-brown
    color: $color-light-brown

  &--dark-brown
    color: $color-dark-brown

  +above($breakpoints.sm)
    max-width: 100%
    font-size: 44px
    line-height: 50px
    margin-bottom: 80px
