.button
  width: 100%
  border-radius: 10px
  background-color: $color-primary
  padding-left: 20px
  padding-right: 20px
  padding-top: 10px
  padding-bottom: 13px
  text-align: center
  color: $color-white
  font-weight: bold
  font-size: 18px
  line-height: 22px

  &--shadow
    box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.25)
  
  &--block
    display: block
