.button
  width: 100%
  border-radius: 10px
  background-color: $color-primary
  padding-left: 5px
  padding-right: 5px
  padding-top: 12px
  padding-bottom: 11px
  text-align: center
  color: $color-white
  font-weight: bold
  font-size: 16px
  line-height: 19px
  cursor: pointer

  +above($breakpoints.sm)
    padding-top: 10px
    padding-bottom: 13px
    font-size: 18px
    line-height: 22px
    font-weight: bold
    padding-left: 20px
    padding-right: 20px

  &--shadow
    box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.25)
  
  &--block
    display: block
