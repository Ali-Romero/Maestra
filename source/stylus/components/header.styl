.header
  font-family: "Proxima"

  &__bg
    background-image: url('/images/header-bg-320.png')
    background-repeat:no-repeat
    background-position: center
    background-size: cover
    +above($breakpoints.sm)
      background-image: url('/images/header-bg.png')

  &__inner
    padding-top: 33px
    padding-bottom: 33px
    display: flex
    justify-content: space-between
    align-items: center
    +above($breakpoints.sm)
      padding-top: 16px
      padding-bottom: 24px

  &__logo
    order: 2
    +above($breakpoints.sm)
      order: 1
      display: flex
      justify-content: center
      align-items: center
  
  &__logo-name
    display: none
    +above($breakpoints.sm)
      font-family: "Proxima"
      padding-left: 10px
      text-transform: uppercase
      font-size: 14px
      line-height: 17px
      color: $color-white
      letter-spacing: 0.1em

  &__contact-img
    color: $color-primary
    font-size: 24px
    +above($breakpoints.sm)
      display: none

  &__menu
    display: none
    +above($breakpoints.sm)
      display: block
      order: 2

  &__mobile-menu
    order: 1
    +above($breakpoints.sm)
      display: none

  &__menu-list
    display: none
    +above($breakpoints.sm)
      display: flex
      justify-content: space-between

  &__menu-item
    color: $color-white
    padding-right: 54px
    cursor: pointer

  &__menu-item:last-child
    padding-right: 0

  &__menu-link
    font-weight: 600
    font-size: 12px
    line-height: 15px
    text-transform: uppercase
    letter-spacing: 0.2em

  &__contact-phone
    order: 3
    +above($breakpoints.sm)
      order: 3

.phone-number
  display: none
  +above($breakpoints.sm)
    display: block
    color: $color-white
    letter-spacing: 0.1em
    font-size: 14px
    line-height: 17px
    text-transform: uppercase

.sub-header
  display: flex
  justify-content: center
  flex-direction: column
  align-items: center
  padding-top: 65px
  +above($breakpoints.sm)
    padding-top: 136px

  &__slogan
    font-size: 18px
    line-height: 20px
    color: $color-white
    +above($breakpoints.sm)
      font-weight: bold
      line-height: 22px
      margin-bottom: 32px

  &__title
    text-align: center
    max-width: 284px
    font-size: 30px;
    line-height: 34px;
    color: $color-white
    font-family: $base-font-family
    margin-bottom: 20px
    +above($breakpoints.sm)
      max-width: 849px
      font-size: 52px
      line-height: 59px
      margin-bottom: 40px

  &__btn
    display: flex
    justify-content: center
    width: 200px
    margin-bottom: 186px
    +above($breakpoints.sm)
      margin-bottom: 256px

.menu-burger
  display: inline-flex
  justify-content: center
  align-items: center
  flex-direction: column
  position: relative
  width: 30px
  height: 18px
  cursor: pointer
  z-index: 5

  &__line
    transition: all 0.3s ease 0s
    position: absolute
    width: 100%
    height: 2px
    background-color: $color-primary
    &:first-child
      top: 0
    &:last-child
      bottom: 0

.menu-burger.active .menu-burger__line
  &:first-child
    transform: rotate(45deg)
    top: 8px

  &:last-child
    transform: rotate(-45deg)
    bottom: 8px

.menu-burger.active .menu-burger__line--hidden
  transform: scale(0)

.menu__list.active
  padding-left: 20px
  display: inline-flex
  flex-direction: column
  justify-content: center
  animation: btn-menu 0.8s 0s
  animation-fill-mode: both
  width: 150px

@keyframes btn-menu
  from
    transform: translateX(100%)

  to
    transform: translateX(0%)