.header
  font-family: "Proxima"

  &__bg
    background-image: url('../images/header-bg-320.png')
    background-repeat:no-repeat
    background-position: center
    background-size: cover

    +above($breakpoints.xl)
      background-image: url('../images/header-bg.png')

  &__mobile-bg
    position relative

  &__inner
    padding-top: 33px
    padding-bottom: 33px
    display: flex
    justify-content: space-between
    align-items: center

    +above($breakpoints.xl)
      padding-top: 16px
      padding-bottom: 24px

  &__logo
    order: 2

    +above($breakpoints.xl)
      order: 1
      display: flex
      justify-content: center
      align-items: center
  
  &__logo-name
    display: none

    +above($breakpoints.xl)
      font-family: "Proxima"
      padding-left: 10px
      text-transform: uppercase
      font-size: 14px
      line-height: 17px
      color: $color-white
      letter-spacing: 0.1em

  &__contact-img
    color: $color-primary
    font-size: 24px

    +above($breakpoints.xl)
      display: none

  &__menu
    display: none

    +above($breakpoints.xl)
      display: block
      order: 2

  &__mobile-menu
    order: 1
    display: flex
    flex-direction: column

    +above($breakpoints.xl)
      display: none

  &__menu-list
    display: none

    +above($breakpoints.xl)
      display: flex
      justify-content: space-between

  &__menu-item
    color: $color-white
    padding-right: 54px
    cursor: pointer

  &__menu-item:last-child
    padding-right: 0

  &__menu-link
    font-weight: 600
    font-size: 12px
    line-height: 15px
    text-transform: uppercase
    letter-spacing: 0.2em

    &:hover
      color: $color-light-brown

  &__contact-phone
    order: 3

.phone-number
  display: none

  +above($breakpoints.xl)
    display: block
    color: $color-white
    letter-spacing: 0.1em
    font-size: 14px
    line-height: 17px
    text-transform: uppercase

.sub-header
  display: flex
  justify-content: center
  flex-direction: column
  align-items: center
  padding-top: 65px

  +above($breakpoints.xl)
    padding-top: 136px

  &__slogan
    font-size: 18px
    line-height: 20px
    color: $color-white

    +above($breakpoints.xl)
      font-weight: bold
      line-height: 22px
      margin-bottom: 32px

  &__title
    text-align: center
    max-width: 284px
    font-size: 30px;
    line-height: 34px;
    color: $color-white
    font-family: $base-font-family
    margin-bottom: 20px

    +above($breakpoints.xl)
      max-width: 849px
      font-size: 52px
      line-height: 59px
      margin-bottom: 40px

  &__btn
    display: flex
    justify-content: center
    width: 200px
    margin-bottom: 186px

    +above($breakpoints.sm)
      margin-bottom: 256px

.menu-burger
  display: inline-flex
  justify-content: center
  align-items: center
  flex-direction: column
  position: relative
  width: 30px
  height: 18px
  cursor: pointer
  z-index: 5

  &__line
    transition: all 0.3s ease 0s
    position: absolute
    width: 100%
    height: 2px
    background-color: $color-primary

    &:first-child
      top: 0

    &:last-child
      bottom: 0

  &__mobile
    max-width: 320px
    padding: 40px 0px 40px 0px

  &__mobile-list
    color: $color-light-brown
    letter-spacing: 0.1em
    font-family: "Proxima"
    font-size: 12px
    line-height: 15px
    text-transform: uppercase

  &__mobile-list :last-child
    margin-bottom: 40px

  &__mobile-item
    margin-bottom: 20px

  &__mobile-phone
    color: $color-white
    font-size: 12px
    line-height: 15px
    letter-spacing: 0.1em

.menu-burger.active .menu-burger__line
  &:first-child
    transform: rotate(45deg)
    top: 8px

  &:last-child
    transform: rotate(-45deg)
    bottom: 8px

.menu-burger.active .menu-burger__line--hidden
  transform: scale(0)


.open-menu
  width: 100%
  top: 0
  right: 0
  left: 0
  height: 100%;
  background: $color-dark-brown
  position: absolute
  padding: 42px 0 0 24px

  +above($breakpoints.sm)
    display: none
