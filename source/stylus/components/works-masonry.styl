.masonry
  &__list
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content: space-between
      padding-top: 144px

   &__item:nth-child(odd)
  
    +above($breakpoints.sm)
      margin-top: -144px

  &__link
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column

  &__img
    margin-bottom: 40px
    filter: drop-shadow(0px 5px 5px rgba(0, 0, 0, 0.25))

  &__subtitle
    max-width: 256px
    margin-bottom: 20px

    +above($breakpoints.sm)
      max-width: 315px
      margin-bottom: 40px

  &__subtitle-text
    font-size: 24px
    line-height: 27px
    text-align: center

    +above($breakpoints.sm)
      font-size: 30px
      line-height: 34px

  &__btn
    width: 180px
    margin-bottom: 60px

    +above($breakpoints.sm)
      margin-bottom: 120px
      width: 200px

.img-masonry
  width: 280px
  height: 374px
  border-radius: 10px

  +above($breakpoints.sm)
    width: 324px
    height: 432px

  +above($breakpoints.md)
    width: 434px
    height: 578px
