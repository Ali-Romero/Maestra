.portfolio-slider-card
  display: inline-block
  background: rgba($color-dark-brown, 0.6)
  padding: 40px 106px 0px 121px
  border-top-right-radius: 10px
  border-bottom-right-radius: 10px

  &__title
    margin-bottom: 20px
    font-size: 30px
    line-height: 34px

  &__name
    margin-bottom: 40px
    font-size: 18px
    line-height: 20px
 
  &__button
    margin-bottom: 40px
    width: 200px
    display: inline-block

.portfolio-slider
  &__slide
    color: $color-white
    position: relative

    &::before
      content: ""
      position absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: $color-dark-brown
      opacity: 0.4
      z-index: 10

  &__img
    height: 100%
    width: 100%
    display: block

  &__relative
    position relative

  &__inner
    position absolute
    padding-top: 40px
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 15

  &__title
    font-size: 40px
    line-height: 45px
    text-align: center
    margin-bottom: 204px
  
  &__slides
    .slick-arrow.slick-prev
      bottom: 135px
      right: 216px
    
    .slick-arrow.slick-next
      right: 166px
      bottom: 135px

.portfolio-slider-projects
  &__close
    background-color: $color-white
    display: flex
    margin-right: 90px
    position absolute
    right: 0
    width: 34px
    height: 34px
    cursor: pointer
    border-radius: 100%
    opacity: 0.8
  
  &__close-icon
    fill: $color-dark-brown
    position: absolute
    width: 34px
    height: 34px

  &__top
    width: 100%
    display: flex
    justify-content: center
    position: absolute
    align-items: center
    z-index 2
    
  &__title
    padding: 20px 30px
    font-size: 18px
    line-height: 20px
    color: white
    background-color: $color-dark-brown
    opacity: 0.9

    +above($breakpoints.sm)
      padding: 45px 73px
      font-size: 40px
      line-height: 45px

  &__projects-slider
    .slick-arrow.slick-prev
