.works-modal-form
  padding-top: 109px
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

  &__input-dn
    display: none

  &__title
    font-size: 30px
    line-height: 34px
    color: $color-light-brown

    +above($breakpoints.sm)
      font-size: 52px
      line-height: 59px

  &__subtitle
    font-size: 18px
    line-height: 20px
    color: $color-light-brown
    margin-bottom: 20px

    +above($breakpoints.sm)
      font-size: 30px
      line-height: 34px
      margin-bottom: 40px

  &__input-wrapper
    margin-bottom: 15px
    display: flex
    flex-direction: column

  &__btn
    width: 260px

.contact-form
  &__input-name,
  &__input-phone
    outline: none
    background-color: $color-white
    width: 260px
    padding: 10px 5px 13px 5px
    text-align: center
    border-radius: 10px
    font-family: "Proxima"
    font-size: 18px
    line-height: 22px
    color: $color-dark-brown
    border: none
    text-overflow: ellipsis
    font-weight: 600
::placeholder
  color: $color-dark-brown
  opacity 0.4
  font-size: 18px
  line-height: 22px

.error
  color: $color-light-brown
  font-weight: 500
