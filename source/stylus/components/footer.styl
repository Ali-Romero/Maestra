.footer
  &__bg
    height: 303px
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 49%) 86.54%, #000000 100%), url('/images/back-320.png')
    background-repeat:no-repeat
    background-position: center
    background-size: cover

    +above($breakpoints.xs)
      height: 400px
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 49%) 86.54%, #000000 100%), url('/images/back-768.png')
      background-repeat:no-repeat
      background-position: center
      background-size: cover

    +above($breakpoints.sm)
      height: 650px

    +above($breakpoints.md)
      height: 1300px
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 49%) 86.54%, #000000 100%), url('/images/back.jpg')
      background-repeat:no-repeat
      background-position: center
      background-size: cover

  &__bg-black
    padding-top: 20px
    background-color: black
    padding-bottom: 32px

  &__btn
    margin-bottom: 58px
    width: 185px
    margin-left: auto
    margin-right: auto

    +above($breakpoints.sm)
      width: 200px

  &__info
    font-family: "Proxima"
    display: flex
    justify-content: center
    flex-direction: column
    align-items: center
    color: $color-white
    padding-top: 40px

    +above($breakpoints.md)
      flex-direction: row
      justify-content: space-between
      padding-top: 146px

  &__info-menu
    display: none

    +above($breakpoints.md)
      display: block

  &__menu-item
    margin-bottom: 14px

  &__menu-link
    font-size: 14px
    line-height: 17px
    letter-spacing: 0.1em
    text-transform: uppercase

  &__info-logo
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column

    +above($breakpoints.md)
      margin-left: 170px
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column

  &__info-copyright
    display: none

    +above($breakpoints.md)
      display: block

  &__copyright-mobile
    display: block
    font-size: 10px
    line-height: 12px

    +above($breakpoints.md)
      display: none

  &__info-link
    margin-bottom: 40px

    +above($breakpoints.md)
      margin-bottom: 10px

  &__info-contact
    margin-bottom: 30px
    font-size: 18px
    line-height: 22px

    +above($breakpoints.sm)
      margin-bottom: 70px
  
    +above($breakpoints.md)
      margin-bottom: 0

  &__info-number,
  &__info-email,
  &__info-address
    margin-bottom: 10px
    text-align: center

    +above($breakpoints.md)
      text-align: end
